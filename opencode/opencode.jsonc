{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [],
  "theme": "tokyonight",
  "model": "minimax-coding-plan/MiniMax-M2.1",

  "mcp": {
    "beads": {
      "type": "local",
      "command": ["uvx", "beads-mcp"],
      "enabled": false,
    },
    "minimax": {
      "type": "local",
      "command": ["uvx", "minimax-coding-plan-mcp"],
      "environment": {
        "MINIMAX_API_HOST": "https://api.minimax.io",
        "MINIMAX_API_KEY": "{env:MINIMAX_API_KEY}",
      },
      "enabled": true,
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
      "enabled": true,
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
    },
    "draw_io": {
      "type": "local",
      "command": ["npx", "-y", "@next-ai-drawio/mcp-server@latest"],
      "enabled": false,
    },
    "leetcode": {
      "type": "local",
      "command": ["npx", "-y", "@jinzcdev/leetcode-mcp-server"],
      "enabled": false,
      "environment": {
        "LEETCODE_SITE": "global",
        "LEETCODE_SESSION": "{env:LEETCODE_SESSION}",
      },
    },
    "chrome": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false,
    },
    "excel": {
      "type": "local",
      "command": ["uvx", "excel-mcp-server", "stdio"],
      "enabled": false,
    },
  },
}
